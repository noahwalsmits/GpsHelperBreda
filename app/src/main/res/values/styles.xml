<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorGray</item>
        <item name="colorAccent">@color/colorLightGray</item>
    </style>
    <style name="Logo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/made</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LogoSubText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/made_light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Header" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/made</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ButtonText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/made</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RouteButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorLightGray</item>
    </style>

    <style name="SubHeader" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:fontFamily">@font/made</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="SecondSubHeader" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:fontFamily">@font/made</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="normalText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/made</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="customPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:itemBackground">@color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/made</item>
    </style>

</resources>
